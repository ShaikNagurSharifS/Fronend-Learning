{
  "name": "playwright-typescript",
  "version": "1.0.0",
  "description": "Enterprise-level Playwright + TypeScript Hybrid BDD Testing Framework supporting UI, API, DB, Mobile, Performance, Security, Visual, Accessibility, Regression, and Combined Testing. 100% free and open-source.",
  "main": "index.js",
  "scripts": {
    "// === CORE TEST TYPES ===": "",
    "test:ui": "npx playwright test --grep @ui",
    "test:api": "npx playwright test --grep @api",
    "test:db": "npx playwright test --grep @db",
    "test:mobile": "npx playwright test --grep @mobile",
    "test:visual": "npx playwright test --grep @visual",
    "test:accessibility": "npx playwright test --grep @accessibility",
    "test:security": "npx playwright test --grep @security",
    "// === LIFE CYCLE TESTS ===": "",
    "test:smoke": "npx playwright test --grep @smoke",
    "test:sanity": "npx playwright test --grep @sanity",
    "test:regression": "npx playwright test --grep @regression",
    "test:e2e": "npx playwright test --grep @e2e",
    "test:integration": "npx playwright test --grep @integration",
    "// === COMBINED & BOOLEAN EXPRESSIONS ===": "",
    "test:visual-and-accessibility": "npx playwright test --grep '@visual|@accessibility'",
    "test:ui-and-api": "npx playwright test --grep '@ui|@api'",
    "test:combined": "npm run test:ui && npm run test:api && npm run test:db",
    "// === BDD TAG EXPRESSIONS (CUCUMBER) ===": "",
    "bdd:smoke": "cucumber-js --require 'src/steps/**/*.ts' --require 'src/support/**/*.ts' --tags '@smoke and not @flaky'",
    "bdd:regression": "cucumber-js --require 'src/steps/**/*.ts' --require 'src/support/**/*.ts' --tags '@regression'",
    "bdd:release-check": "cucumber-js --require 'src/steps/**/*.ts' --tags '@release-ready'",
    "// === PERFORMANCE TESTS (K6) ===": "",
    "test:performance:load": "k6 run performance/k6/load-test.js",
    "test:performance:stress": "k6 run performance/k6/stress-test.js",
    "test:performance:spike": "k6 run performance/k6/spike-test.js",
    "test:performance:soak": "k6 run performance/k6/soak-test.js",
    "// === CI/CD PRESETS ===": "",
    "test:ci-smoke": "npx playwright test --grep '@smoke' --workers=2",
    "test:ci-regression": "npx playwright test --grep '@regression' --workers=4",
    "test:ci-combined": "npm run test:ui && npm run test:api && npm run test:db",
    "test:pre-release": "cucumber-js --tags '@release-ready' --format json:reports/pre-release.json",
    "test:visual-accessibility": "npx playwright test --grep '@visual|@accessibility' --reporter=html",
    "// === REPORTING & MAINTENANCE ===": "",
    "report:allure": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "build": "tsc -p .",
    "clean": "rimraf dist node_modules test-results allure-results allure-report"
  },
  "keywords": [
    "playwright",
    "typescript",
    "bdd",
    "gherkin",
    "automation",
    "testing",
    "e2e",
    "end-to-end",
    "integration-testing",
    "api-testing",
    "ui-testing",
    "mobile-testing",
    "performance-testing",
    "load-testing",
    "stress-testing",
    "soak-testing",
    "security-testing",
    "dast",
    "sast",
    "accessibility",
    "visual-regression",
    "component-testing",
    "smoke",
    "regression",
    "sanity",
    "exploratory",
    "ci",
    "github-actions",
    "allure",
    "k6",
    "database-testing",
    "db-testing",
    "mocking",
    "contract-testing",
    "pact",
    "combined",
    "combinatorial",
    "matrix",
    "tagged-runs",
    "test-orchestration",
    "observability"
  ],
  "author": "Shaik Nagur",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "1.56.1",
    "@cucumber/cucumber": "12.2.0",
    "@cucumber/pretty-formatter": "1.0.0",
    "@axe-core/playwright": "4.11.0",
    "typescript": "5.6.3",
    "ts-node": "10.9.2",
    "dotenv": "16.4.5",
    "eslint": "9.39.1",
    "eslint-config-prettier": "9.1.0",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "@types/node": "22.9.0",
    "allure-playwright": "2.14.0",
    "chai": "5.1.0",
    "axios": "1.13.2",
    "ajv": "8.16.0",
    "zod": "3.23.8",
    "mongodb": "6.8.0",
    "pg": "8.11.3",
    "pixelmatch": "5.3.0"
  },
  "dependencies": {
    "@faker-js/faker": "8.4.1",
    "uuid": "9.0.1",
    "moment": "2.30.1"
  },
  "engines": {
    "node": ">=20"
  }
}
